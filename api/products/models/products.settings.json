{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "price": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "sale": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "stock": {
      "type": "integer"
    },
    "description": {
      "type": "richtext"
    },
    "Product_variation": {
      "type": "component",
      "repeatable": true,
      "component": "main-components.product-variation"
    },
    "price_text": {
      "type": "string",
      "default": "Price Unit"
    },
    "features": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "available": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
